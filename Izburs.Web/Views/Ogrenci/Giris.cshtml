@model KullaniciModel
    <!-- Section: inner-header -->
<section class="inner-header divider parallax layer-overlay overlay-dark-5" data-bg-img="/Shared/images/bg/bg3.jpg">
    <div class="container pt-70 pb-20">
        <!-- Section Content -->
        <div class="section-content">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="title text-white">Öğrenci Giriş</h2>
                    <ol class="breadcrumb text-left text-black mt-10">
                        <li><a href="/">Anasayfa</a></li>
                        <li><a href="#">Öğrenci</a></li>
                        <li class="active text-gray-silver">Giriş</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">

        <div class="row">
            <div class="col-md-12">
                <h2>Öğrenci Giriş Paneli</h2>
                <hr>
                @*<div class="heading-line-bottom">
                        <h4 class="heading-title">Basic example</h4>
                    </div>*@

                <div data-example-id="basic-forms" class="bs-example mb-30">
                    <form action="/Ogrenci/Giris" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label for="exampleInputEmail2">Email Adresiniz / Kullanıcı Adınız</label>
                            <input type="email" placeholder="Email Adresiniz / Kullanıcı Adınız" id="exampleInputEmail2" class="form-control" asp-for="@Model.KullaniciAd" name="KullaniciAd">
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword2">Şifreniz</label>
                            <input type="password" placeholder="Şifreniz" id="exampleInputPassword2" class="form-control" asp-for="@Model.Sifre" name="Sifre">
                        </div>

                        <div class="checkbox"> <label> <input type="checkbox" asp-for="@Model.BeniHatirla" name="BeniHatirla"> Beni Hatırla </label> </div>
                        <div><a href="/Ogrenci/SifremiUnuttum">Şifremi Unuttum</a></div>
                        <button class="btn btn-default" type="submit">Gönder</button>
                    </form>
                </div>
            </div>


        </div>
    </div>
</section>
@section Javascript{

    <script src="~/jqueryValid/jquery.validate.min.js"></script>
    <script src="~/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}