@model IEnumerable<SSS>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnSil").click(function () {
                var ID = $(this).data("id");
                $.ajax({
                    url: '/Admin/Icerik/SoruSil/' + ID,
                    type: 'POST',
                    dataType: 'json',
                    success: function (data) {
                        if (data == "ok") {
                            $("#onayBaslik").val("TEBRİKLER");
                            $("#onayMesaj").val("Öğrenci Görüşünü Başarılı bir şekilde onaylandı.");
                        } else {
                            $("#onayBaslik").val("HATA");
                            $("#onayMesaj").val("Öğrenci Görüşünü Onaylanırken hata oluştu.");
                        }
                    }
                });
            });
        });
    </script>

<div class="pcoded-main-container">
    <div class="pcoded-wrapper">

        <div class="pcoded-content">
            <div class="pcoded-inner-content">
             
                <!-- Main-body start -->
                <div class="main-body">
                    <div class="page-wrapper">

                        <!-- Page-header start -->
                        <div class="page-header">
                            <div class="page-header-title">
                                <a href="/Admin/Icerik/SoruEkle" id="btnOnayla" class="btn btn-success btn-outline-success" data-modal="modal-1"><i class="icofont icofont-check-circled"></i>Yeni Ekle</a>
                                @*<h4>Sık Sorulan Sorular</h4>
        <span>Sık Sorulan Sorular </span>*@
                            </div>
                            <div class="page-header-breadcrumb">
                                <ul class="breadcrumb-title">
                                    <li class="breadcrumb-item">
                                        <a href="index.html">
                                            <i class="icofont icofont-home"></i>
                                        </a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a href="#!">İçerik İşlemleri</a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a href="#!">İçerik Yönetimi</a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a href="#!">Sık Sorulan Sorular</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <!-- Page-header end -->
                        <!-- Page-body start -->
                        <div class="page-body">
                            <div class="row">
                                <div class="col-sm-12">
                                    <!-- HTML5 Export Buttons table start -->
                                    <div class="card">
                                        <div class="card-header table-card-header">
                                            <h5>SIK SORULAN SORU LİSTESİ</h5>
                                            <div class="card-header-right">
                                                <i class="icofont icofont-rounded-down"></i>
                                                <i class="icofont icofont-refresh"></i>
                                                <i class="icofont icofont-close-circled"></i>
                                            </div>
                                        </div>
                                        <div class="card-block">
                                            <div class="dt-responsive table-responsive">
                                                <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                                    <thead>
                                                        <tr>
                                                            <th># ID</th>
                                                            <th>Soru</th>
                                                            <th>Kayıt Tarihi</th>
                                                            <th>Güncelleme Tarihi</th>
                                                            <th>İşlem</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model)
                                                        {
                                                            <tr>
                                                                <td>@item.Id</td>
                                                                <td>@item.Ad</td>
                                                                <td>@item.KayitTarihi.ToShortDateString()</td>
                                                                <td>@item.GuncellemeTarihi.ToShortDateString()</td>
                                                                <td>
                                                                    <button type="button" id="btnSil" data-id="@item.Id" class="btn btn-danger btn-outline-danger"><i class="icofont icofont-check-circled"></i>Sil</button>

                                                                </td>
                                                            </tr>
                                                        }

                                                    </tbody>
                                                    <tfoot>
                                                        <tr>
                                                            <th># ID</th>
                                                            <th>Soru</th>
                                                            <th>Kayıt Tarihi</th>
                                                            <th>Güncelleme Tarihi</th>
                                                            <th>İşlem</th>
                                                        </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- HTML5 Export Buttons end -->
                                    <!-- Column Selectors table start -->

                                </div>
                            </div>
                            <!-- Page-body end -->
                        </div>
                    </div>
                </div>
                <!-- Main-body end -->
                <div id="styleSelector">

                </div>
            </div>
        </div>
    </div>
</div>

<div class="md-modal md-effect-1" id="modal-1">
    <div class="md-content">
        <h3 id="onayBaslik">TEBRİKLER</h3>
        <div>
            <p id="onayMesaj">Sık Sorulan Soru Başarılı bir şekilde Silindi.</p>

            <button type="button" class="btn btn-primary waves-effect md-close">Kapat</button>
        </div>
    </div>
</div>