@model Sayfa
<div class="pcoded-main-container">
    <div class="pcoded-wrapper">

        <div class="pcoded-content">
            <div class="pcoded-inner-content">

                <!-- Main-body start -->
                <div class="main-body">
                    <div class="page-wrapper">
                        <!-- Page header start -->
                        <div class="page-header">
                            <div class="page-header-title">
                                <h4>Sayfa Düzenle</h4>
                                @*<span>Lorem ipsum dolor sit <code>amet</code>, consectetur adipisicing elit</span>*@
                            </div>
                            <div class="page-header-breadcrumb">
                                <ul class="breadcrumb-title">
                                    <li class="breadcrumb-item">
                                        <a href="index.html">
                                            <i class="icofont icofont-home"></i>
                                        </a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a href="#!">İçerik Yönetimi</a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a href="#!">Sayfa Düzenleme</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        @ViewBag.Durum
                        <!-- Page header end -->
                        <!-- Page body start -->
                        <div class="page-body">
                            <div class="row">
                                <div class="col-sm-12">
                                    <!-- Basic Form Inputs card start -->
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>Sayfa Düzenleme Paneli</h5>
                                            @*<span>Add class of <code>.form-control</code> with <code>&lt;input&gt;</code> tag</span>*@
                                            <div class="card-header-right">
                                                <i class="icofont icofont-rounded-down"></i>
                                                <i class="icofont icofont-refresh"></i>
                                                <i class="icofont icofont-close-circled"></i>
                                            </div>
                                        </div>
                                        <div class="card-block">
                                            @*<h4 class="sub-title">Basic Inputs</h4>*@
                                            <form asp-action="Duzenle" asp-controller="Sayfa" asp-area="Admin" method="post" enctype="multipart/form-data">
                                                <input type="hidden" asp-for="Id" name="Id" value="@Model.Id" />
                                                @*<div asp-validation-summary="All" class="text-danger"></div>*@

                                                @{
                                                    if (Model != null)
                                                    {
                                                        <div class="form-group row">
                                                            <label class="col-sm-2 col-form-label">Yüklenen Resim</label>
                                                            <div class="col-sm-10">
                                                                <a href="@Model.Resim" data-toggle="lightbox" data-title="@Model.Baslik">
                                                                    <img src="@Model.Resim" class="img-fluid" alt="@Model.Baslik" height="150" width="200">
                                                                </a>
                                                            </div>
                                                        </div>
                                                    }
                                                }
                                                <div class="form-group row">
                                                    <label class="col-sm-2 col-form-label">Sayfa Resmi</label>
                                                    <div class="col-sm-10">
                                                        <input type="file" class="form-control" asp-for="Resim" name="Resim">
                                                        <span asp-validation-for="Resim" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-sm-2 col-form-label">Sayfa Başlığı</label>
                                                    <div class="col-sm-10">
                                                        <input type="text" class="form-control" asp-for="Baslik" name="Baslik">
                                                        <span asp-validation-for="Baslik" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-sm-2 col-form-label">İçetik</label>
                                                    <div class="col-sm-10">
                                                        <textarea id="Icerik" asp-for="Icerik" name="Icerik" rows="20" cols="10"></textarea>
                                                        <script>
                                                            ClassicEditor
                                                                .create(document.querySelector('#Icerik'), {
                                                                    //plugins: [... ,ImageInsert],
                                                                    //toolbar: [... ,'imageInsert']
                                                                })
                                                                .then(editor => {
                                                                    console.log(editor);
                                                                })
                                                                .catch(error => {
                                                                    console.error(error);
                                                                });
                                                        </script>
                                                        <span asp-validation-for="Icerik" class="text-danger"></span>
                                                    </div>
                                                </div>


                                              
                                                <div class="form-group row">
                                                    <div class="col-sm-10">
                                                        <button class="btn btn-success btn-square" type="submit">GÖNDER</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <!-- Page body end -->
                    </div>
                </div>
                <!-- Main-body end -->
                <div id="styleSelector">

                </div>
            </div>
        </div>
    </div>
</div>

