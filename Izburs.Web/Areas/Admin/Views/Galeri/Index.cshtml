@model IEnumerable<GaleriKat>
<div class="pcoded-main-container">
    <div class="pcoded-wrapper">

        <div class="pcoded-content">
            <div class="pcoded-inner-content">

                <!-- Main-body start -->
                <div class="main-body">
                    <div class="page-wrapper">
                        <!-- Page-header start -->
                        <div class="page-header">
                            <div class="page-header-title">
                                <h4>Galeri Lstesi</h4>
                                <span>Oluşturulan Galeri Kategorilerinin Listesidir</span>
                            </div>
                            <div class="page-header-breadcrumb">
                                <ul class="breadcrumb-title">
                                    <li class="breadcrumb-item">
                                        <a href="index.html">
                                            <i class="icofont icofont-home"></i>
                                        </a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a href="#!">İçerik İşlemleri</a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a href="#!">Galeri Yönetimi</a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a href="#!">Galeriler</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="page-body">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="card">
                                        <div class="card-header table-card-header">
                                            <h5>GALERİ LİSTESİ</h5>
                                            <div class="card-header-right">
                                                <i class="icofont icofont-rounded-down"></i>
                                                <i class="icofont icofont-refresh"></i>
                                                <i class="icofont icofont-close-circled"></i>
                                            </div>
                                        </div>
                                        <div class="card-block">
                                            <div class="dt-responsive table-responsive">
                                                <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                                    <thead>
                                                        <tr>
                                                            <th>Galeri Adı</th>
                                                            <th>Resim</th>
                                                            <th>Oluşturulduğu Tarih</th>
                                                            <th>Son Güncelleme Tarihi</th>
                                                            <th>İşlem</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model)
                                                        {
                                                        <tr>
                                                            <td>@item.Ad</td>
                                                            <td>
                                                                <a href="@item.Resim" data-toggle="lightbox" data-title="@item.Ad">
                                                                    <img src="@item.Resim" class="img-fluid" alt="@item.Ad" height="75" width="150">
                                                                </a>
                                                            </td>
                                                            <td>@item.KayitTarihi.ToShortDateString()</td>
                                                            <td>@item.GuncellemeTarihi.ToShortDateString()</td>
                                                            <td>
                                                                <a href="/Admin/Galeri/Goster/@item.Id" class="btn btn-info btn-outline-info"><i class="icofont icofont-info-square"></i> Görüntüle</a>
                                                            </td>
                                                        </tr>
                                                        }
                                                    </tbody>
                                                    <tfoot>
                                                        <tr>
                                                            <th>Galeri Adı</th>
                                                            <th>Resim</th>
                                                            <th>Oluşturulduğu Tarih</th>
                                                            <th>Son Güncelleme Tarihi</th>
                                                            <th>İşlem</th>
                                                        </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Page-body end -->
                        </div>
                    </div>
                </div>
                <!-- Main-body end -->
                <div id="styleSelector">

                </div>
            </div>
        </div>
    </div>
</div>