@model IEnumerable<Basvuru>
<div class="pcoded-main-container">
    <div class="pcoded-wrapper">

        <div class="pcoded-content">
            <div class="pcoded-inner-content">

                <!-- Main-body start -->
                <div class="main-body">
                    <div class="page-wrapper">
                        <!-- Page-header start -->
                        <div class="page-header">
                            <div class="page-header-title">
                                <h4>Öğrenci Burs Başvuruları</h4>
                                <span>Öğrencilerin online başvuru formunu doldurarark başvurduğu listedir</span>
                            </div>
                            <div class="page-header-breadcrumb">
                                <ul class="breadcrumb-title">
                                    <li class="breadcrumb-item">
                                        <a href="index.html">
                                            <i class="icofont icofont-home"></i>
                                        </a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a href="#!">Öğrenci İşlemleri</a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a href="#!">Başvuru Yönetimi</a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a href="#!">Raporlar</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <!-- Page-header end -->
                        <!-- Page body start -->
                        <div class="page-body">
                            <div class="row">
                                <div class="col-sm-12">
                                    <!-- Basic Form Inputs card start -->
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>Raporlama Paneli</h5>
                                            @*<span>Add class of <code>.form-control</code> with <code>&lt;input&gt;</code> tag</span>*@
                                            <div class="card-header-right">
                                                <i class="icofont icofont-rounded-down"></i>
                                                <i class="icofont icofont-refresh"></i>
                                                <i class="icofont icofont-close-circled"></i>
                                            </div>
                                        </div>
                                        <div class="card-block">
                                            @*<h4 class="sub-title">Basic Inputs</h4>*@
                                            <form asp-action="Basvuru" asp-controller="Rapor" asp-area="Admin" method="post">
                                                @*<div asp-validation-summary="All" class="text-danger"></div>*@

                                                <div class="form-group row">
                                                    <label class="col-sm-2 col-form-label">Şehir Seçiniz</label>
                                                    <div class="col-sm-10">
                                                        @*<div class="col-sm-12 col-xl-4 m-b-30">*@
                                                        <select class="js-example-disabled-results col-sm-12" name="SehirId">
                                                            <option value="0">Şehir Seçiniz</option>
                                                            @foreach (var item in (List<Sehir>)ViewBag.Sehir)
                                                            {
                                                                <option value="@item.Id">@item.Ad</option>
                                                            }
                                                        </select>
                                                        @*</div>*@
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-sm-2 col-form-label">Okul Seçiniz</label>
                                                    <div class="col-sm-10">
                                                        @*<div class="col-sm-12 col-xl-4 m-b-30">*@
                                                        <select class="js-example-disabled-results col-sm-12" name="OkulId">
                                                            <option value="0">Okul Seçiniz</option>
                                                            @foreach (var item in (List<Okul>)ViewBag.Okul)
                                                            {
                                                                <option value="@item.Id">@item.Ad</option>
                                                            }
                                                        </select>
                                                        @*</div>*@
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-sm-2 col-form-label">Bölüm Seçiniz</label>
                                                    <div class="col-sm-10">
                                                        @*<div class="col-sm-12 col-xl-4 m-b-30">*@
                                                        <select class="js-example-disabled-results col-sm-12" name="BolumId">
                                                            <option value="0">Bölüm Seçiniz</option>
                                                            @foreach (var item in (List<Bolum>)ViewBag.Bolum)
                                                            {
                                                                <option value="@item.Id">@item.Ad</option>
                                                            }
                                                        </select>
                                                        @*</div>*@
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-sm-2 col-form-label">Okul Türü Seçiniz</label>
                                                    <div class="col-sm-10">
                                                        @*<div class="col-sm-12 col-xl-4 m-b-30">*@
                                                        <select class="js-example-disabled-results col-sm-12" name="OkulTuruId">
                                                            <option value="0">Okul Türü Seçiniz</option>
                                                            @foreach (var item in (List<OkulTuru>)ViewBag.OkulTuru)
                                                            {
                                                                <option value="@item.Id">@item.Ad</option>
                                                            }
                                                        </select>
                                                        @*</div>*@
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <div class="col-sm-10">
                                                        <button class="btn btn-success btn-square" type="submit">GÖNDER</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <!-- Page body end -->
                        <!-- Page-body start -->
                        <div class="page-body">
                            <div class="row">
                                <div class="col-sm-12">
                                    <!-- HTML5 Export Buttons table start -->
                                    <div class="card">
                                        <div class="card-header table-card-header">
                                            <h5>BAŞVURU RAPORLARI</h5>
                                            <div class="card-header-right">
                                                <i class="icofont icofont-rounded-down"></i>
                                                <i class="icofont icofont-refresh"></i>
                                                <i class="icofont icofont-close-circled"></i>
                                            </div>
                                        </div>
                                        <div class="card-block">
                                            <div class="dt-responsive table-responsive">
                                                <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                                    <thead>
                                                        <tr>
                                                            <th>Resim</th>
                                                            <th>Adı Soyadı</th>
                                                            <th>Okul</th>
                                                            <th>Bölüm</th>
                                                            <th>Şehir</th>
                                                            <th>Puan</th>
                                                            <th>Görüntüle</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @if (Model != null)
                                                        {
                                                            @foreach (var item in Model)
                                                            {
                                                                <tr>
                                                                    <td><img src="@item.Resim" width="100" height="75" /></td>
                                                                    <td>@item.Ad @item.Soyad</td>
                                                                    <td>@item.Okul.Ad</td>
                                                                    <td>@item.Bolum.Ad</td>
                                                                    <td>@item.Sehir.Ad</td>
                                                                    <td>@item.Puan</td>
                                                                    <td>
                                                                        <div class="dropdown-primary dropdown open">
                                                                            <button class="btn btn-primary dropdown-toggle waves-effect waves-light " type="button" id="dropdown-2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">İŞLEMLER</button>
                                                                            <div class="dropdown-menu" aria-labelledby="dropdown-2" data-dropdown-in="fadeIn" data-dropdown-out="fadeOut">
                                                                                <input id="btnId" type="hidden" value="@item.Id" />
                                                                                <a class="dropdown-item waves-light waves-effect" href="/Admin/Ogrenci/Goruntule/@item.Id"><i class="icofont icofont-eye-alt"></i>  BAŞVURU GÖR</a>
                                                                                <a class="dropdown-item waves-light waves-effect" href="#" id="btnKararsiz" data-id="7" type="submit"><i class="icofont icofont-info-square"></i> KARARSIZ</a>
                                                                                <a class="dropdown-item waves-light waves-effect" href="#" id="btnInceleme" data-id="6" type="submit"><i class="icofont icofont-warning-alt"></i> INCELEME</a>
                                                                                <a class="dropdown-item waves-light waves-effect" href="#" id="btnIptal" data-id="1" type="submit"><i class="icofont icofont-eye-alt"></i>  İPTAL</a>
                                                                                <div class="dropdown-divider"></div>
                                                                                <button id="btnIzbursGiris" data-id="2" type="submit" class="dropdown-item waves-light waves-effect">IZBURSA GİRİŞ</button>
                                                                                @*<a class="dropdown-item waves-light waves-effect" href="#" id="btnIzbursGiris" data-id="2">IZBURSA GİRİŞ</a>*@
                                                                                @*<input id="btnIdsw" type="submit" onclick="IzbursBursGuncelle(@item.Id,2)" value="giriş" />*@
                                                                            </div>
                                                                        </div>

                                                                        @*<button id="btnKararsiz" data-id="7" type="submit" class="btn btn-primary waves-effect waves-light">KARARSIZ</button> |
                                                        <button id="btnInceleme" data-id="8" type="submit" class="btn btn-warning waves-effect waves-light">INCELEME</button> |
                                                        <button id="btnIptal" data-id="1" type="submit" class="btn btn-danger waves-effect waves-light">İPTAL</button>
                                                        <a href="/Admin/Ogrenci/Goruntule/@item.Id" target="_blank" class="btn btn-info btn-outline-info"><i class="icofont icofont-info-square"></i></a>*@
                                                                    </td>
                                                                </tr>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <p> Veri Yok!</p>
                                                        }
                                                    </tbody>
                                                    <tfoot>
                                                        <tr>
                                                            <th>Resim</th>
                                                            <th>Adı Soyadı</th>
                                                            <th>Okul</th>
                                                            <th>Bölüm</th>
                                                            <th>Şehir</th>
                                                            <th>Puan</th>
                                                            <th>Görüntüle</th>
                                                        </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- HTML5 Export Buttons end -->
                                    <!-- Column Selectors table start -->

                                </div>
                            </div>
                            <!-- Page-body end -->
                        </div>
                    </div>
                </div>
                <!-- Main-body end -->
                <div id="styleSelector">

                </div>
            </div>
        </div>
    </div>
</div>